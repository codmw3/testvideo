
@page

@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment WebHostEnvironment

@{
    var environmentName = Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") ?? "Development";
}

@model IndexModel
@{
    ViewData["Title"] = "Home page";
    var currentEnvironment = ViewData["environment"] as string;
}

@Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT")
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
 

<b><p> The current environmentt is @environmentName.</p></b>

<form>
		<label for="search-input">Search:</label>
		<input type="text" id="search-input" name="search-input">
		<button type="submit" id="search-button">Search</button>
	</form>

         var searchInput = _driver.FindElement(By.Id("search-input"));
        var searchButton = _driver.FindElement(By.Id("search-button"));

        searchInput.Clear();

        searchButton.Click();

        try
        {
            var alert = _driver.SwitchTo().Alert();
            Assert.Equal("Please enter a search query", alert.Text);
            alert.Accept();
        }
        catch (NoAlertPresentException)
        {
            Assert.True(false, "No alert was displayed.");
        }

</div>
